<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/volley_string_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volley String"
        android:clickable="true"
        android:background="@drawable/text_status_bg"
        android:padding="5dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/volley_json_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volley JSON"
        android:clickable="true"
        android:background="@drawable/text_status_bg"
        android:padding="5dp"
        android:layout_margin="5dp"
        />
    <ImageView
        android:id="@+id/volley_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"
        />
    <ImageView
        android:id="@+id/volley_loader_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        />
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/volley_networkimageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        />

</LinearLayout>