<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/http_get_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HttpClient GET"
        android:clickable="true"
        android:background="@drawable/text_status_bg"
        android:padding="5dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/http_post_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HttpClient POST"
        android:clickable="true"
        android:background="@drawable/text_status_bg"
        android:padding="5dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/http_url_get_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HttpURLConnection GET"
        android:clickable="true"
        android:background="@drawable/text_status_bg"
        android:padding="5dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/http_url_post_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HttpURLConnection POST"
        android:clickable="true"
        android:background="@drawable/text_status_bg"
        android:padding="5dp"
        android:layout_margin="5dp"
        />
</LinearLayout>
